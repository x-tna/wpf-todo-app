<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 
    <Style x:Key="StyleHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="StyleNewTodoName" TargetType="TextBox">
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Background" Value="{StaticResource ForegroundLixtBox}" />
        <Setter Property="Padding" Value="0,5,0,5"/>
    </Style>


    <Style x:Key="StyleListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource BackgroundListBox}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundLixtBox}" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>
    
</ResourceDictionary>